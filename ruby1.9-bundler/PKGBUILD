pkgname=ruby1.9-bundler
_gemname=${pkgname#ruby1.9-}
pkgver=1.3.4
pkgrel=1
pkgdesc="Manages an application's dependencies through its entire life, across many machines, systematically and repeatably."
arch=('any')
url="http://gembundler.com"
license=('MIT')
depends=('ruby1.9')
source=(http://rubygems.org/downloads/${_gemname}-${pkgver}.gem)
noextract=(${_gemname}-${pkgver}.gem)
sha256sums=('12e291979824f8dd485825d9bd85fd33fda09c1a46ef8fc0cb145b68c361f9ed')

package() {
  cd "${srcdir}"

  local _gemdir="$(ruby-1.9 -rubygems -e'puts Gem.default_dir')"
  HOME=/tmp gem-1.9 install --no-user-install --ignore-dependencies \
  -i "${pkgdir}${_gemdir}" ${_gemname}-${pkgver}.gem

  install -d $pkgdir/usr/bin/
  ln -s $_gemdir/bin/bundle $pkgdir/usr/bin/bundle-1.9
}
